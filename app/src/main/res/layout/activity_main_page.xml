<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:background="#fff"
    android:orientation="horizontal"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="10"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000"
            android:text="UESRNAME"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/Button1_MainPage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#440"
            android:layout_margin="3dp"

            android:text="1"
            android:textSize="100dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/Button2_MainPage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#a6a"
            android:layout_margin="3dp"

            android:text="2"
            android:textSize="100dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/Button3_MainPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#d11"
                android:layout_margin="3dp"

                android:text="3"
                android:textSize="70dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Button4_MainPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f88"
                android:layout_margin="3dp"

                android:text="4"
                android:textSize="70dp"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="10"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:background="#000"
            android:layout_margin="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/Button5_MainPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#80f"
                android:layout_margin="3dp"

                android:text="5"
                android:textSize="70dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Button6_MainPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#08f"
                android:layout_margin="3dp"

                android:text="6"
                android:textSize="70dp"
                android:gravity="center"/>


        </LinearLayout>

        <TextView
            android:id="@+id/Button7_MainPage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="3dp"
            android:background="#761"

            android:text="7"
            android:textSize="100dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/Button8_MainPage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#990"
            android:layout_margin="3dp"

            android:text="8"
            android:textSize="100dp"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>