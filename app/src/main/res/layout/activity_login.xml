<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_green_leaf" />

    <TextView
        android:id="@+id/emailView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="@color/word_Prifile"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:background="@drawable/asset3"
        android:hint="Email or Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColorHint="#ffffff"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/passwordView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/word_Prifile"
        android:textSize="25dp"/>
    <EditText
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:id="@+id/editTextPassword"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"

        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingRight="13dp"
        android:paddingTop="13dp"
        android:paddingBottom="14dp"
        android:textColorHint="#ffffff"
        android:textSize="24dp"
        android:drawableRight="@drawable/ic_eye"
        android:background="@drawable/asset3"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape_login"
        android:text="log in"
        android:textColor="#FFF"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/signupView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No account? SignUp here!"
        android:background="@drawable/buttonshape_signup"
        android:textColor="#FFF"
        android:textSize="25dp"/>


</LinearLayout>